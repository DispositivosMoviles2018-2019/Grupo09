<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoBusquedaActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Placa:"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Marca:"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fabricacion:"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Costo:"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Matriculado:"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Color:"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Estado:"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tipo:"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvResPlaca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Placa"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvResMarca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Marca"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvResFabricacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fabricacion"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvResCosto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Costo"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvResMatriculado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Matriculado"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvResColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Color"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvResEstado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Estado"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvResTipo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tipo"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgResVehiculo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="IMAGEN" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnResBusMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="108dp"
        android:onClick="irMenu"
        android:text="Menu Principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</android.support.constraint.ConstraintLayout>